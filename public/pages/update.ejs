<div class="jumbotron text-center">
    <h1>Update a Coffee</h1>
    <p>{{ message }}</p>
    <!--<p>{{coffee.name}}</p>-->


    <div>
        <div class="row">
            <div class="col-md-6 col-md-offset-3">

                <form ng-submit="updateCoffee(coffee._id)"
                      style="margin-top:30px;" ng-controller="updateController">

                    <div class = "form-group" align = "center">Favourtie<div class=rating>
                     <span id="star-toggle" class="favourite glyphicon glyphicon-star gi-3x"  style="color:blue">
                               </span>

                    </div>

                    <div class="form-group">
                        <label class="control-label" for="focusedInput">Coffee Name</label>
                        <input ng-model="coffee.name" class="form-control" id="focusedInput" type="text">
                    </div>

                    <div class="form-group">
                        <label class="control-label" for="inputDefault">Coffee Shop</label>
                        <input ng-model="coffee.shop" class="form-control" id="focusedInput" type="text">
                    </div>



                    <div class="form-group" align="center">
                        <input type="number"
                               class="form-control"
                               placeholder="Amount"
                               ng-model="coffee.amount"
                               ng-style="{'width': 100 + 'px'}"></input>
                    </div>


                    <div class = "form-group" align = "center">Star Rating <div class=rating>

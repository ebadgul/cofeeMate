<div class="jumbotron text-center">
    <h1>Add Coffee Page!</h1>
    <h3>Enter your coffee details below</h3>
    <p>{{ message }}</p>


    <div ng-controller="coffeeController">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">

                <form ng-submit="addCoffee()"
                      style="margin-top:30px;">
                    <h3>Add a new Coffee</h3>

                    <div class="form-group" align="center">
                        <select ng-model="formData.paymentOptions" class="form-control" ng-show="formData.paymentOptions" ng-options="option.name for option in options" ng-style="{'width': 100 + 'px'}">
                        </select>
                    </div>
                    <div class="form-group" align="center">
                        <input type="number"
                               class="form-control"
                               placeholder="Amount"
                               ng-model="formData.amount"
                               ng-style="{'width': 100 + 'px'}"></input>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Coffee</button>
                </form>

            </div>
        </div>

</div>
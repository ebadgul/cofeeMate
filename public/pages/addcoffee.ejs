<div class="jumbotron text-center">
    <h1>Add Coffee Page!</h1>
    <p>{{ message }}</p>


    <div ng-controller="coffeeController">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">

                <form ng-submit="addCoffee()"
                      style="margin-top:30px;">

                    <div class="form-group">
                        <label class="control-label" for="focusedInput">Coffee Name</label>
                        <input ng-model="formData.name" class="form-control" id="focusedInput" type="text" placeholder="Name">
                    </div>

                    <div class="form-group">
                        <label class="control-label" for="inputDefault">Coffee Shop</label>
                        <input ng-model="formData.shop" class="form-control" id="focusedInput" type="text" placeholder="Shop">
                    </div>



                    <div class="form-group" align="center">
                        <input type="number"
                               class="form-control"
                               placeholder="Amount"
                               ng-model="formData.amount"
                               ng-style="{'width': 100 + 'px'}"></input>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Coffee</button>
                </form>

            </div>
        </div>

</div>